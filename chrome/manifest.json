{
  "manifest_version": 2,

  "name": "Biome",
  "description": "Biometric detection auth",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/lock48.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "48": "images/lock48.png",
    "128": "images/lock128.png"
  },

  "permissions": [
    "tabs",
    "http://www.facebook.com/*",
    "activeTab"
  ],

  "options_page": "options.html"
}
